# Alpaca API Credentials
APCA_API_KEY_ID=your_alpaca_key_id
APCA_API_SECRET_KEY=your_alpaca_secret_key

# Azure OpenAI API (Required for news-sentiment strategy)
AZURE_OPENAI_API_KEY=your_azure_openai_key

# Control API
CONTROL_API_KEY=your_secure_random_key_here
VERCEL_URL=https://your-app.vercel.app

# ============================================
# TRADING STRATEGY SELECTION
# ============================================
# Options: news-sentiment, historical-data
# Default: news-sentiment
TRADING_STRATEGY=news-sentiment

# ============================================
# NEWS SENTIMENT STRATEGY CONFIGURATION
# ============================================
# Comma-separated list of stock symbols to monitor
# Use '*' for all stocks (may generate high API usage)
NEWS_SYMBOLS=*

# Sentiment score thresholds (1-100 scale)
NEWS_BUY_THRESHOLD=85
NEWS_SELL_THRESHOLD=50

# ============================================
# HISTORICAL DATA STRATEGY CONFIGURATION
# ============================================
# Comma-separated list of stock symbols to trade
HISTORICAL_SYMBOLS=SPY,AAPL,TSLA,NVDA,MSFT

# Technical indicator periods (in days)
HISTORICAL_SMA_PERIOD=50
HISTORICAL_RSI_PERIOD=14

# RSI thresholds for buy/sell signals
HISTORICAL_RSI_BUY=30
HISTORICAL_RSI_SELL=70

# How often to check for trading signals (in milliseconds)
# 60000 = 1 minute, 300000 = 5 minutes
HISTORICAL_CHECK_INTERVAL=60000

# How many days of historical data to analyze
HISTORICAL_LOOKBACK_DAYS=100

# Maximum number of shares per position
HISTORICAL_MAX_POSITION=10
